{
  "name": "YoutubeSync",
  "description": "sync youtube players",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "./scripts/socket.io.js",
      "./scripts/client.js",
      "./background.js"
    ]
  },
  "browser_action": {
    "default_popup": "./popup/popup.html",
    "default_title": "YoutubeSync"
  },
  "icons": {
    "16": "./images/icon.png",
    "48": "./images/icon.png",
    "128": "./images/icon.png"
  },
  "permissions": ["*://youtube.com/*", "tabs"]
}
